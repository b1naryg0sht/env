[alias]
  st = status
  
  #branch
  br = branch
  #delete branch
  brdel = branch -D
  #show branch info
  brav = branch -av
  
  #checkou
  co = checkout
  #create a new branch and checkout
  cob = checkout -b
  
  #show all commit content
  lp = log -p
  #show last commit content
  lp1 = log -p -1
  #show last 2 commit content
	lp2 = log -p -2
	
  #log pretty
	l0 = log --color --graph --decorate --pretty=oneline --abbrev-commit --date-order
	l1 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	l2 = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	list-tags = for-each-ref --format=\"%(color:yellow)tag %(objectname)%(color:reset)
  
[color]
	ui = auto
	branch = auto
	status = auto
